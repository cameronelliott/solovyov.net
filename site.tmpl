{{ define "page" }}{{ template "header" . }}
  {{ .Content }}
{{ end }}

{{ define "post" }}
<article>
  <h1>{{ .Title }}</h1>

  <div class="details">
    <time datetime="{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}">
      {{ .Date.Format "2006, January 02" }}
    </time>

    in

    {{ range .Tags }}
    <a href="/tags/{{ . }}/">{{ . }}</a>,
    {{ end }}
  </div>

  <section>
  {{ .Content }}
  </section>
</article>
{{ end }}


{{define "tag"}}
# Pages tagged with {{ .Title }}

{{ range .Site.Pages.WithTag .Title }}
- [{{ .Title }}](../../{{ .Url }})
{{ end }}
{{end}}
