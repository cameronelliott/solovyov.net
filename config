# -*- mode: makefile -*-

TEMPLATES = site.tmpl
SOURCE = src
OUTPUT = site


*.tag: blog/*/*.md
	rename *.html
	directorify
	template tag
	markdown
	template page

*.md:
	config
	rename *.html
	directorify
	tags tags/*.tag
	markdown
	template page

blog/index.md: blog/*/*.md
	config
	rename blog/index.html
	inner-template
	markdown
	template page

index.md: blog/index.md
	config
	rename index.html
	inner-template
	markdown
	template page

*.html:
	directorify
	template page

static/bootstrap/*.less:
	ignore

static/style.less:
	rename static/style.css
	:lessc -

\#*:
	ignore

feed.atom: blog/*/*.md
	inner-template
